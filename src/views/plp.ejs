<%- include siteHeader.ejs%>

<div class="plp-wrapper">
    <div id="mySidebar" class="sidebar">
        <div class="sidebar-header">
            <div style="display: inline">Filters</div>
            <div class="closebtn" onclick="closeNav()">&#5171;</div>
        </div>
            <button class="collapsible">ACTIVITY</button>
            <div class="content">
                <ul>
                    <li class="filter-element">SNOW</li>
                    <li class="filter-element">WHEEL</li>
                    <li class="filter-element">ROAD</li>
                </ul>
            </div>
            <button class="collapsible">PRODUCT TYPE</button>
            <div class="content">
                <div>
                    <ul>
                        <li class="filter-element">LEATHER SUITS</li>
                        <li class="filter-element">JACKETS</li>
                        <li class="filter-element">PANTS</li>
                        <li class="filter-element">ACCESSORIES</li>
                        <li class="filter-element">HELMETS</li>
                        <li class="filter-element">SHOES</li>
                        <li class="filter-element">BOOTS</li>
                        <li class="filter-element">GLOVES</li>
                        <li class="filter-element">SAFETY</li>
                        <li class="filter-element">TECHNICAL LAYERS</li>
                        <li class="filter-element">CASUAL WEAR</li>

                    </ul>
                </div>
            </div>
            <button class="collapsible" >GENDER</button>
            <div class="content">
                <div>
                    <ul>
                        <li class="filter-element">UNISEX</li>
                        <li class="filter-element">MEN</li>
                        <li class="filter-element">WOMEN</li>
                    </ul>
                </div>
            </div>
            <button class="collapsible" >PRICE</button>
            <div class="content">
                <div>
                    <input type="range" min="1" max="100" class="slider">
                </div>
            </div>
            <button class="collapsible">COLOR</button>
            <div  class="content">
                <div class="colors-wrapper">
                    <div style="background-color: green" class="color"></div>
                    <div style="background-color: black" class="color"></div>
                    <div style="background-color: white" class="color"></div>
                    <div style="background-color: orange" class="color"></div>
                    <div style="background-color: red" class="color"></div>
                </div>
            </div>
            <button class="collapsible">SIZE</button>
            <div class="content">
                <div class="size-wrapper">
                    <div class="size filter-element" >S</div>
                    <div class="size filter-element">M</div>
                    <div class="size filter-element">L</div>
                    <div class="size filter-element">XL</div>
                </div>
            </div>
        <div>
            <button class="btn results-button">RESET FILTER</button>
            <button class="btn btn-danger results-button">VIEW RESULTS</button>
        </div>
    </div>
    <div class="nav-desktop">
        <div class="nav-desktop-wrapper">
            <div class="nav-desktop-elements">
                <div style="padding: 10px"><img src="/images/location.png" style="width: 25px" alt=""> Store Locator</div>
                <div style="padding: 10px">
                    <div style="padding:10px;border-left: solid 1px gray; border-right: solid 1px gray">
                        <img src="/images/user.png" style="width: 25px" alt="">Login</div>
                </div>
                <div style="border-right: solid 1px gray; padding: 10px">
                    ðŸ‡§ðŸ‡¬ BG
                </div>
                <div style="padding: 10px">&#128722; 0</div>
            </div>
        </div>
        <div class="logo-menu">
            <div class="logo-menu-wrapper">
                <div class="logo-menu-elements">
                    <img class="element" style="max-width: 75%; max-height: 75%" src="/images/fp-logo.png" alt="">
                    <div class="element">STORE</div>
                    <div class="element">COMPANY</div>
                    <div class="element">AIRBAG</div>
                    <div class="element">ATHLETES</div>
                    <div class="element">NEWS</div>
                </div>
            </div>
        </div>
        <div class="category-title">
            <div class="category-title-wrapper">
                <div class="title"><%=name%></div>
                <div><%=products.length%> ITEMS</div>
            </div>
        </div>
    </div>
    <div class="nav-mobile">
        <div class="nav-mobile-wrapper">
            <div class="nav-mobile-elements">
                <div style="float: left">&#9776;</div>
                <div><%=name%></div>
                <div style="float:right;">&#128722; 0</div>
            </div>
        </div>
        <div style="background-color: lightgray; margin: 0px" class="nav-mobile-wrapper">
            <div style="color: dimgray;text-align: left; padding: 5px" class="nav-mobile-elements">
                <button class="openbtn" onclick="openNav()">&#5176; Filters</button>
                <div style="float: right">Search &#128269;</div>
            </div>
        </div>
    </div>
    <div class="refine">Refine by:</div>
    <div class="container-flex grid-container">
        <div style="margin: 0px 5px 0px 5px" class="row">
            <div class="col-sm-4">
                <div class="filter">
                    <button class="collapsible">CATEGORY</button>
                    <div class="content">
                        <ul>
                            <li class="filter-element">MOTORBIKE</li>
                            <li class="filter-element">AVG</li>
                            <li class="filter-element">WINTERSPORTS</li>
                            <li class="filter-element">BIKE</li>
                            <li class="filter-element">EQUESTRIAN</li>
                        </ul>
                    </div>
                    <button class="collapsible">PRODUCT TYPE</button>
                    <div class="content">
                        <div>
                            <ul>
                                <li class="filter-element">LEATHER SUITS</li>
                                <li class="filter-element">JACKETS</li>
                                <li class="filter-element">PANTS</li>
                                <li class="filter-element">ACCESSORIES</li>
                                <li class="filter-element">HELMETS</li>
                                <li class="filter-element">SHOES</li>
                                <li class="filter-element">BOOTS</li>
                                <li class="filter-element">GLOVES</li>
                                <li class="filter-element">SAFETY</li>
                                <li class="filter-element">TECHNICAL LAYERS</li>
                                <li class="filter-element">CASUAL WEAR</li>

                            </ul>
                        </div>
                    </div>
                    <button class="collapsible" >GENDER</button>
                    <div class="content">
                        <div>
                            <ul>
                                <li class="filter-element">UNISEX</li>
                                <li class="filter-element">MEN</li>
                                <li class="filter-element">WOMEN</li>
                            </ul>
                        </div>
                    </div>
                    <button class="collapsible" >PRICE</button>
                    <div class="content">
                        <div>
                            <input type="range" min="1" max="100" class="slider">
                        </div>
                    </div>
                    <button class="collapsible">COLOR</button>
                    <div  class="content">
                        <div class="colors-wrapper">
                            <div style="background-color: green" class="color"></div>
                            <div style="background-color: black" class="color"></div>
                            <div style="background-color: white" class="color"></div>
                            <div style="background-color: orange" class="color"></div>
                            <div style="background-color: red" class="color"></div>
                        </div>
                    </div>
                    <button class="collapsible">SIZE</button>
                    <div class="content">
                        <div class="size-wrapper">
                            <div class="size filter-element" >S</div>
                            <div class="size filter-element">M</div>
                            <div class="size filter-element">L</div>
                            <div class="size filter-element">XL</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="container-flex">
                    <div class="row">
                        <div class="card-deck">
                            <% _.each(products, product=> { %>
                                <div class="col-sm-4">
                                    <div onclick="window.location.assign('<%=data.id%>-<%=subcategoryId%>/<%=product.id%>');" class="card" style="margin: 5px">
                                        <img class="card-img-top" src="/images/<%=product.image_groups.filter(value => value.view_type =='large')[0].images[0].link%>">
                                        <div class="card-body">
                                            <div style="color: dimgray; border-bottom: dimgray solid 1px" class="card-title"><%=product.name%></div>
                                            <div style="color: dimgray" class="card-price"><%=product.price%> EUR</div>
                                        </div>
                                    </div>
                                </div>
                            <%});%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include siteFooter.ejs%>
