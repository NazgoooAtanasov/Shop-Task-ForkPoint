<%- include header.ejs %>
    <div class="body-wrapper">
        <div class="bodyArranger">
            <div class="gridContainer">
                <div>
                    <img src="/images/<%=imageLink%>">
                </div>
                <div>
                    <%- data.long_description %>
                    <div class="gridContainer">
                        <div>
                            <a class="customButton">Buy now</a>
                        </div>
                        <div>
                            <p>Price:</p>
                            <p id="price"><%=Math.round(price)%> <%=currency%></p>
                            <select name="currency" id="cars">
                                <option onclick="window.location.assign('/products/<%=category%>/<%=data.id%>/USD')" value="USD">USD</option>
                                <option onclick="window.location.assign('/products/<%=category%>/<%=data.id%>/EUR')" value="EUR">EUR</option>
                                <option onclick="window.location.assign('/products/<%=category%>/<%=data.id%>/USD')" value="BGN">BGN</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include footer.ejs%>